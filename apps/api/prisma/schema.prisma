generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       Int        @id @default(autoincrement())
  nombre   String
  Token    Token[]
  UsoToken UsoToken[]

  @@map("clientes")
}

model Token {
  id              Int        @id @default(autoincrement())
  token           String     @unique
  fechaGeneracion DateTime   @default(now()) @map("fecha_generacion")
  fechaExpiracion DateTime   @map("fecha_expiraci√≥n")
  activo          Boolean    @default(true)
  clienteId       Int        @map("cliente_id")
  cliente         Cliente    @relation(fields: [clienteId], references: [id])
  usosToken       UsoToken[]

  @@map("tokens")
}

model UsoToken {
  id         Int          @id @default(autoincrement())
  fechaUso   DateTime     @default(now()) @map("fecha_uso")
  tokenUsado String       @map("token_usado")
  tokenId    Int          @map("token_id")
  token      Token        @relation(fields: [tokenId], references: [id])
  clienteId  Int          @map("cliente_id")
  cliente    Cliente      @relation(fields: [clienteId], references: [id])
  tipoUsoId  Int          @map("tipo_uso_id")
  tipoUso    TipoUsoToken @relation(fields: [tipoUsoId], references: [id])

  @@map("uso_tokens")
}

model TipoUsoToken {
  id          Int        @id @default(autoincrement())
  nombre      String
  descripcion String
  UsoToken    UsoToken[]

  @@map("tipo_uso_token")
}
